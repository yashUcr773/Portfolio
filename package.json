{
    "name": "portfolio",
    "version": "0.0.0",
    "scripts": {
        "start:front": "ng serve --o",
        "start:back": "npm run build && nodemon server/server.js --watch",
        "start:prod": "set NODE_ENV=production && npm run build:prod && node server/server.js",
        "start": "concurrently \"npm run start:front\" \"npm run start:back\" ",
        "build": "ng build",
        "build:prod": "npm run clean:dist && ng build --configuration=production",
        "clean:dist": "npm run rimraf -- dist",
        "rimraf": "rimraf",
        "serve": "node server/server.js",
        "build:serve": "npm run build && npm run serve",
        "serve:watch": "nodemon server/server.js --watch",
        "build:serve:watch": "npm run build && npm run serve:watch"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^15.0.0",
        "@angular/common": "^15.0.0",
        "@angular/compiler": "^15.0.0",
        "@angular/core": "^15.0.0",
        "@angular/forms": "^15.0.0",
        "@angular/platform-browser": "^15.0.0",
        "@angular/platform-browser-dynamic": "^15.0.0",
        "@angular/router": "^15.0.0",
        "@hotjar/browser": "^1.0.9",
        "@srexi/purecounterjs": "^1.5.0",
        "aos": "^2.3.4",
        "body-parser": "^1.20.2",
        "bootstrap": "^5.3.0",
        "chart.js": "^4.1.1",
        "concurrently": "^8.2.0",
        "express": "^4.18.2",
        "nodemailer": "^6.9.3",
        "nodemon": "^3.0.1",
        "TagCloud": "^2.3.2",
        "tslib": "^2.3.0",
        "typed.js": "^2.0.16",
        "zone.js": "~0.12.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^15.0.4",
        "@angular/cli": "~15.0.4",
        "@angular/compiler-cli": "^15.0.0",
        "@types/aos": "^3.0.4",
        "@types/jasmine": "~4.3.0",
        "@types/jquery": "^3.5.16",
        "jasmine-core": "~4.5.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.0.0",
        "typescript": "~4.8.2"
    },
    "engines": {
        "npm": ">=8.19.2",
        "node": ">=18.12.1"
    }
}